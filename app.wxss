/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

.tab {
  display: flex;
  width: 100%;
  background-color: #fff;
}

.tab .tab-item {
  position: relative;
  flex: 1;
  margin: 0 10%;
  padding-bottom: 5px;
  text-align: center;
}

.tab .tab-item.active {
  color: #5677fc;
  border-bottom: 3px solid #5677fc;
}

.tab .tab-radio-tip {
  position: absolute;
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background-color: red;
  left: 50px;
  top: 0px;
}

.task-list {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  font-size: 14px;
}

.task-list .task-item {
  position: relative;
  display: flex;
  padding: 10px;
  margin-bottom: 10px;
  background-color: #fff;
}

.task-list .task-item:last-child {
  margin-bottom: 0px;
}

.task-list .task-item .task-cover {
  width: 120px;
  height: 120px;
}

.task-list .task-item .task-desc {
  position: relative;
}

.task-list .task-item .task-desc .task-number {
  margin-bottom: 5px;
}

.task-list .task-item .task-desc .task-name {
  margin-bottom: 25px;
}

.task-list .task-item .task-desc .task-price {
  margin-bottom: 15px;
  color: #ff2a55;
}

.task-list .task-item .task-desc .task-status {
  position: absolute;
  bottom: 0px;
  color: #c4bdaa;
}
